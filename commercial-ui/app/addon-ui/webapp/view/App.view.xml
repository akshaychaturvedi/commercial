<mvc:View xmlns:form="sap.ui.layout.form"
    controllerName="addonui.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <App id="app">
        <Page id="page"
            title="{i18n>title}"
            class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer">
            <content>
                <VBox class="sapUiLargeMarginBottom">
                    <form:SimpleForm id="productForm"
                        editable="true"
                        layout="ResponsiveGridLayout"
                        title="Selection"
                        singleContainerFullSize="true"
                        emptySpanXL="4"
                        emptySpanS="0"
                        labelSpanXL="6"
                        columnsXL="1">
                        <Label text="Product Name"
                            required="true"></Label>
                        <ComboBox id="productBox"
                            items="{
					path: '/ProductList',
					sorter: { path: 'productName' }
				}"
                            selectionChange="onChange"
                            width="50%">
                            <core:Item key="{ID}"
                                text="{productName}" />
                        </ComboBox>
                        <Label text="Language"
                            required="true"></Label>
                        <ComboBox id="languageBox"
                            width="40%"
                            selectionChange="onLaguageSelect">
                            <items>
                                <core:Item key="item-1-key"
                                    text="JavaScript"
                                    id="item0"/>
                                <core:Item key="item-2-key"
                                    text="Python"
                                    id="item1"/>
                            </items>
                        </ComboBox>
                        <Button text="Go"
                            press="onSelection"
                            width="10%"/>
                    </form:SimpleForm>
                </VBox>
                <VBox class="sapUiLargeMarginBottom">
                    <Table id="metricTable"
                        visible="false"
                        items="{/ProductMetricesList}">
                        <columns>
                            <Column>
                                <Text text="Metrics"/>
                            </Column>
                            <Column>
                                <Text text="Selection"/>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="{name}"/>
                                    <CheckBox selected="{isChecked}"
                                        editable="false"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>
                <VBox class="sapUiLargeMarginBottom">
                    <TextArea id="codeArea"
                        visible="false"
                        value="Lorem ipsum dolor st amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet. Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat. Lorem ipsum dolor st amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet. Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat."
                        growing="true"
                        width="100%"/>
                </VBox>
            </content>
        </Page>
    </App>
</mvc:View>
