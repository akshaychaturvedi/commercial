<mvc:View xmlns:codeeditor="sap.ui.codeeditor"
    xmlns:form="sap.ui.layout.form"
    controllerName="addonui.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <App id="app">
        <Page id="page"
            title="{i18n>title}"
            class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer">
            <content>
                <VBox class="sapUiLargeMarginBottom">
                    <form:SimpleForm id="productForm"
                        editable="true"
                        layout="ResponsiveGridLayout"
                        title="Selection"
                        singleContainerFullSize="true"
                        emptySpanXL="4"
                        emptySpanS="0"
                        labelSpanXL="6"
                        columnsXL="1">
                        <Label text="Product Name"
                            required="true"></Label>
                        <ComboBox id="productBox"
                            items="{
					path: '/ProductList',
					sorter: { path: 'productName' }
				}"
                            selectionChange="onChange"
                            width="50%">
                            <core:Item key="{ID}"
                                text="{productName}" />
                        </ComboBox>
                        <Label text="Language"
                            required="true"></Label>
                        <ComboBox id="languageBox"
                            width="40%"
                            selectionChange="onLaguageSelect">
                            <items>
                                <core:Item key="item-1-key"
                                    text="JavaScript"
                                    id="item0"/>
                                <core:Item key="item-2-key"
                                    text="Python"
                                    id="item1"/>
                            </items>
                        </ComboBox>
                        <Button text="Go"
                            press="onSelection"
                            width="10%"/>
                    </form:SimpleForm>
                </VBox>
                <VBox class="sapUiLargeMarginBottom">
                    <Table id="metricTable"
                        visible="false"
                        items="{/ProductMetricesList}">
                        <columns>
                            <Column>
                                <Text text="Metrics"/>
                            </Column>
                            <Column>
                                <Text text="Selection"/>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="{name}"/>
                                    <CheckBox selected="{isChecked}"
                                        editable="false"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>
                <VBox class="sapUiLargeMarginBottom">
                    <codeeditor:CodeEditor id="codeArea"
                        visible="false"
                        height="300px"
                        editable="false"
                        maxLines="10"
                        value="var value1 = 10;
                        var value2 = 20;
                        var sum = value1 + value2
                        console.log(sum)"
                        type="javascript" />
                </VBox>
            </content>
        </Page>
    </App>
</mvc:View>
