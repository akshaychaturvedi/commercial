<mvc:View xmlns:form="sap.ui.layout.form" controllerName="commercialui.controller.App"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m">

    <App id="app">
        <Page title="Commercial UI" class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer">

            <content>
                <VBox class="sapUiLargeMarginBottom">
                    <form:SimpleForm id="productForm" editable="true" layout="ResponsiveGridLayout" title="Product Details">
                        <Label text="Product Name" required="true"/>
                        <Input value="{ProductModel>/productName}" placeholder="Enter product name" width="50%"/>
                        <Label text="Product Owner" required="true"/>
                        <Input value="{ProductModel>/productOwner}" placeholder="Enter product owner" width="50%"/>
                    </form:SimpleForm>
                </VBox>
                <VBox class="sapUiLargeMarginBottom">
                    <Table id="metricTable" items="{MetricsModel>/metrics}">
                        <columns>
                            <Column>
                                <Text text="Metrics"/>
                            </Column>
                            <Column>
                                <Text text="Selection"/>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="{MetricsModel>name}"/>
                                    <CheckBox selected="{MetricsModel>isChecked}"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>
            </content>

            <footer>
                <OverflowToolbar >
                    <ToolbarSpacer/>
                    <Button id="saveButton" type="Emphasized" text="{i18n>saveButton}" press="onSave"/>
                </OverflowToolbar>
            </footer>
        </Page>
    </App>

